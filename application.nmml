<?xml version="1.0" encoding="utf-8"?>
<project>
<!-- metadata, make sure 'package' is at least 2 segments (ie. com.myproject) -->
	<app file="Tuxmath" title="Tuxmath" main="tuxkids.Main" package="tuxkids.math.app" 
		version="1.0.0" company="Deepak Aggarwal" />
		
	<!-- output -->
	<window width="480" height="320" fps="60" background="0x000000" orientation="landscape" resizable="true" />
	<set name="BUILD_DIR" value="bin" />
	
	<!-- classpath, haxe libs -->
	<classpath name="src" />
	<haxelib name="nme" />
	<haxelib name="actuate" />
	<!-- assets -->
	<icon name="assets/nme.svg" />
	<assets path="assets" include="*" exclude="nme.svg" />
	<assets path="assets/sounds" include="*" type="sound" exclude = "background.mp3"/>
	
	<!-- DLLs -->
	<ndll name="std" />
	<ndll name="regexp" />
	<ndll name="zlib" />
	<ndll name="nme" haxelib="nme" />
	
	<!-- Windows app: hide console -->
	<!--<setenv name="no_console" value="1" />-->
</project>